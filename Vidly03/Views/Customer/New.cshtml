@model Vidly03.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    @Html.ValidationSummary(true, "Please fix the following errors: ");
    <div class="form-group">
        @Html.LabelFor(m => m.Customers.Name)
        @Html.TextBoxFor(m => m.Customers.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customers.MembershipTypesId)
        @Html.DropDownListFor(m => m.Customers.MembershipTypesId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type!", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.MembershipTypesId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customers.DateOfBirth)
        @Html.TextBoxFor(m => m.Customers.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.DateOfBirth)
    </div>
    <div class="form-check">
        @Html.CheckBoxFor(m => m.Customers.IsSubcribedToNewsletter)
        <label class="form-check-label" for="flexCheckChecked">
            Subcribe to newsletter?
        </label>
    </div>
    @Html.HiddenFor(m => m.Customers.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}