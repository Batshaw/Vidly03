@model Vidly03.Models.Customers
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership: @Model.MembershipTypes.Name</li>

    @if (Model.DateOfBirth != null)
    {
        <li>Date Of Birth: @Model.DateOfBirth.Value.ToString("dd/MM/yyyy")</li>
    }
</ul>