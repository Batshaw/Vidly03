@model Vidly03.Models.Movies
@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleasedDate.ToString("dd/MM/yyyy")</li>
    <li>Date Added: @Model.AddedDate.ToString("dd/MM/yyyy")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>